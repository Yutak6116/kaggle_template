{
  "name": "kaggle-notebook-cpu",
  "build": { "dockerfile": "Dockerfile", "context": "." },
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
    "source=${env:HOME}/.kaggle,target=/root/.kaggle,type=bind,readonly"
  ],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "python3 -m ipykernel install --user --name kaggle-notebook-cpu"
}
